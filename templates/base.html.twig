<div>
					{% if app.user %}
            <a class=" btn btn-secondery" href="{{ path ('app_logout') }}">se déconecter</a>
            {% if is_granted('ROLE_ADMIN') %}
            {# si l'utilisateur à un ROLE_ADMIN #}
              <a class=" btn btn-secondery" href="{{ path ('app_admin') }}">BACKOFFICE</a>
            {% endif %}
						{# <a class="btn btn-primary" href="{{ path ('app_logout') }}">déconnexion</a> #}

					{% else %}
						<a class="btn btn-secondery" href="{{ path ('app_register') }}">création de compte</a>

						<a class="btn btn-secondery" href="{{ path ('app_login') }}">connexion</a>
					{% endif %}

				</div>


</nav>




































    <div class="container">
        {% block body %}{% endblock %}
    </div>


    <footer class="bg-light text-center text-white">
  <!-- Grid container -->
  <div class="container p-4 pb-0">
    <!-- Section: Social media -->
    <section class="mb-4">
      <!-- Facebook -->
      <a
        class="btn btn-primary btn-floating m-1"
        style="background-color: #3b5998;"
        href="#!"
        role="button"
        ><i class="fab fa-facebook-f"></i
      ></a>

      <!-- Twitter -->
      <a
        class="btn btn-primary btn-floating m-1"
        style="background-color: #55acee;"
        href="#!"
        role="button"
        ><i class="fab fa-twitter"></i
      ></a>

      <!-- Google -->
      <a
        class="btn btn-primary btn-floating m-1"
        style="background-color: #dd4b39;"
        href="#!"
        role="button"
        ><i class="fab fa-google"></i
      ></a>

      <!-- Instagram -->
      <a
        class="btn btn-primary btn-floating m-1"
        style="background-color: #ac2bac;"
        href="#!"
        role="button"
        ><i class="fab fa-instagram"></i
      ></a>

      <!-- Linkedin -->
      <a
        class="btn btn-primary btn-floating m-1"
        style="background-color: #0082ca;"
        href="#!"
        role="button"
        ><i class="fab fa-linkedin-in"></i
      ></a>
      <!-- Github -->
      <a
        class="btn btn-primary btn-floating m-1"
        style="background-color: #333333;"
        href="#!"
        role="button"
        ><i class="fab fa-github"></i
      ></a>
    </section>
    <!-- Section: Social media -->
  </div>
  <!-- Grid container -->

  <!-- Copyright -->
  <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
    © 2020 Copyright:
    <a class="text-white" href="https://mdbootstrap.com/"></a>
  </div>
  <!-- Copyright -->
</footer>




  



    
